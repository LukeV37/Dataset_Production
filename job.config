#!/bin/bash

#######################
### General Options ###
#######################
max_cpu_cores=4                       # Max number of parallel tasks for SPMD

######################
### Bypass Options ###
######################
bypass_madgraph=false                 # Skip madgraph generation if true
bypass_pythia=false                   # Skip pythia showering if true
bypass_preprocessing=false            # Skip preprocessing if true

########################
### MadGraph Options ###
########################
madgraph_out_tag="Generated"          # Tag used to identify MG job
process="ttbar_semiLep"               # Currently supported options: HHbbbb, bbbb, ttbar_semiLep
num_runs_madgraph=4                   # Number of runs (files) generated by MG (int)
num_events_per_run="1k"               # Number of events per run (file) (string or int)

######################
### Pythia Options ###
######################
pythia_in_tag=$madgraph_out_tag       # Tag used to identify input from MG
pythia_out_tag="Showered"             # Tag used to identify output from Pythia
num_runs_pythia=$num_runs_madgraph    # Number of output files from pythia (int)
mu=60                                 # Average number of pileup interactions (int)
minJetpT=25 #GeV                      # Minimum jet pT for clustering (float)

#############################
### Preprocessing Options ###
#############################
preproc_in_tag="$pythia_out_tag"      # Tag used to identify input from pythia
preproc_out_tag="Preprocessed"        # Tag used to identify output from preprocessing
num_runs_preproc=$num_runs_pythia     # Number of output files from preprocessing (int)
